server {
    listen 80;
    server_name {{ lora_appserver_public_host }};

	{% if lora_app_server.letsencrypt.accept_letsencrypt_tos %}
		location / {
			return 301 https://{{ lora_appserver_public_host }}$request_uri;
		}
	{% else %}
		location / {
			proxy_pass http://localhost:8080;
		}
	{% endif %}
}

{% if lora_app_server.letsencrypt.accept_letsencrypt_tos %}
	server {
		listen 443 ssl;
		server_name {{ lora_appserver_public_host }};
		ssl_certificate /etc/letsencrypt/live/{{ lora_appserver_public_host }}/fullchain.pem;
		ssl_certificate_key /etc/letsencrypt/live/{{ lora_appserver_public_host }}/privkey.pem;

		location ~ ^/api/(gateways|devices)/(\w+)/(frames|events)$ {
			proxy_pass http://127.0.0.1:8080/api/$1/$2/$3;
			proxy_http_version 1.1;
			proxy_set_header Upgrade $http_upgrade;
			proxy_set_header Connection "Upgrade";
			proxy_read_timeout 86400s;
			proxy_send_timeout 86400s;
		}

		location / {
			proxy_pass http://localhost:8080;
		}
	}
{% endif %}
